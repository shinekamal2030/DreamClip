<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create a new post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2" name="postimage" type="file">
        <input class="block w-1/3 px-3 py-2 text-black border-2 mt-2 rounded-md "name="title" type="text" placeholder="title">
         <textarea class="block w-1/3 px-3 py-2 text-black border-2 mt-2 rounded-md " type="text" placeholder="description" name="description"></textarea>
    
        <input class="block w-1/3 px-3 py-2  mt-2 rounded-md bg-red-700 " type="submit" value="Create Post">
    </form>
</div>
